{
  "manifest_version": 2,

  "name": "Spark for streamer",
  "short_name": "Spark",
  "description": "Gestion de spark pour votre stream",
  "version": "1.1",

  "background": {
    "page": "index_streamer.html"
  },

  "browser_action": {
    "default_icon": "ICONS/Icon48-01.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://spark-esport.herokuapp.com/admin.html"
  ],

  "icons": {
      "128" : "ICONS/Icon128-01-01.png"
  }
}